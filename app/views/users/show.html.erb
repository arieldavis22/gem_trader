<div class=main_back>
<h1>Welcome, <%= @user.name%>!</h1>
<h2>Points: <%=current_user.points%></h2>
<% flash.each do |type, msg| %>
    <div>
        <%= msg %>
    </div>
<% end %><br><br>
<div class="buttons">
    <div id="middle">
        <%=link_to "Sell Cards", '/sell_cards'%>
        <%=link_to "Buy a Box of Cards", boxes_path%>
        </div>
</div><br><br><br><br>
<h2>Your Cards</h2><br>
    <% if current_user.cards.empty? %>
    <p>No Cards! Time to buy another box.</p>
    <% end %>
    <% current_user.cards.each do |card|%>
    <div class="gem">
        <h6><%= card.name %></h6>
        <p><%= card.points_worth %> pts</p>
    </div>
    <% end %><br>

<br><br>
</div>